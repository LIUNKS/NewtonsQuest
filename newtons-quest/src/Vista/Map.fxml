<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mapBackground" prefHeight="700.0" prefWidth="900.0" styleClass="map-background" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlador.MapController">
   <children>
      <Label layoutX="300.0" layoutY="50.0" text="Mapa de Aventuras" textFill="#ffffff">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Label layoutX="300.0" layoutY="100.0" text="Selecciona una actividad para continuar" textFill="#ffffff">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      
      <!-- Botones de actividades -->
      <VBox alignment="CENTER" layoutX="325.0" layoutY="200.0" spacing="30.0">
         <children>
            <Button fx:id="btnJugar" mnemonicParsing="false" onAction="#onJugarButtonClick" prefHeight="60.0" prefWidth="250.0" styleClass="map-button" text="Jugar">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="btnVideo" mnemonicParsing="false" onAction="#onVideoButtonClick" prefHeight="60.0" prefWidth="250.0" styleClass="map-button" text="Ver Video">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
            <Button fx:id="btnQuiz" mnemonicParsing="false" onAction="#onQuizButtonClick" prefHeight="60.0" prefWidth="250.0" styleClass="map-button" text="Quiz">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>      <!-- Botón para volver al menú principal -->
      <Button layoutX="20.0" layoutY="20.0" mnemonicParsing="false" onAction="#onBackToMainMenuClick" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: #e74c3c; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #c0392b; -fx-border-width: 2;" text="←" textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
